          },
          "priceIncVat": {
            "type": "number",
            "format": "decimal",
            "example": 125
          }
        },
        "required": [
          "created",
          "start",
          "end",
          "priceExVat",
          "priceIncVat"
        ],
        "additionalProperties": false
