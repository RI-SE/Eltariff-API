        "required": [
          "id",
          "name",
          "validPeriod",
          "timeZone",
          "lastUpdated",
          "companyName",
          "companyOrgNo",
          "product",
          "direction",
          "billingPeriod",
          "fixedPrice",
          "energyPrice",
          "powerPrice"
